<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e6e6e6"
    tools:context=".CadastroMetas">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="0sp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cadastro de Metas"
                android:textAlignment="center"
                android:textColor="#240B3B"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                android:text="Nome da meta:"
                android:textSize="18sp"
                android:textColor="#240B3B"
                android:layout_marginLeft="20dp" />

            <EditText
                android:id="@+id/meta_nomemeta"
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:background="@drawable/oval"
                android:ems="10"
                android:layout_marginLeft="20dp"
                android:textColor="#240B3B"
                android:textAlignment="center"
                android:inputType="textPersonName"
                android:paddingTop="5dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Valor (R$):"
                android:textColor="#240B3B"
                android:textSize="18sp"
                android:layout_marginLeft="20dp" />

            <EditText
                android:id="@+id/meta_valormeta"
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:background="@drawable/oval"
                android:ems="10"
                android:inputType="numberDecimal"
                android:layout_marginLeft="20dp"
                android:textColor="#240B3B"
                android:textAlignment="center"
                android:paddingTop="5dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                android:text="Data de Recebimento:"
                android:textColor="#240B3B"
                android:textSize="18sp"
                android:layout_marginLeft="20dp"/>

            <EditText
                android:id="@+id/meta_datameta"
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:background="@drawable/oval"
                android:ems="10"
                android:inputType="date"
                tools:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:textAlignment="center"
                android:textColor="#240B3B"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Descrição"
                android:textColor="#240B3B"
                android:layout_marginLeft="20dp"
                android:textSize="18sp"/>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/meta_descricaometa"
                    android:layout_width="350dp"
                    android:layout_height="60dp"
                    android:background="@drawable/oval"
                    tools:layout_marginTop="5dp"
                    android:layout_marginLeft="20dp"
                    android:textAlignment="center"
                    android:textColor="#240B3B"/>
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="70dp">

                <Button
                    android:id="@+id/meta_btncancelar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:textColor="#FAFAFA"
                    android:background="@drawable/ovalvermelho"
                    android:text="Cancelar" />

                <Button
                    android:id="@+id/meta_btnconfirmar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:textColor="#FAFAFA"
                    android:background="@drawable/ovalverde"
                    android:text="Confirmar" />


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
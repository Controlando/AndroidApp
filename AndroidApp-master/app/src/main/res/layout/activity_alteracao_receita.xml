<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AlteracaoReceita">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Informações da Receita"
                    android:textColor="#240B3B"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            <Button
                android:id="@+id/btn_editarReceita"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="60dp"
                android:background="@drawable/ovalroxo"
                android:textColor="#FAFAFA"
                android:text="Editar"/>

        </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15sp"
                    android:text="Nome da receita:"
                    android:textColor="#240B3B"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/receita_nomereceita"
                    android:layout_width="350dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/oval"
                    android:ems="10"
                    android:inputType="text"
                    android:paddingTop="5dp"
                    android:textAlignment="center"
                    android:textColor="#240B3B" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15sp"
                    android:text="Valor da receita:"
                    android:textColor="#240B3B"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/receita_valordespesa"
                    android:layout_width="350dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/oval"
                    android:ems="10"
                    android:inputType="numberDecimal"
                    android:paddingTop="5dp"
                    android:textAlignment="center"
                    android:textColor="#240B3B" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15sp"
                    android:text="Data de Recebimento:"
                    android:textColor="#240B3B"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/receita_datareceita"
                    android:layout_width="350dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/oval"
                    android:ems="10"
                    android:hint="dd/mm/aaaa"
                    android:inputType="date"
                    android:textAlignment="center"
                    android:textColor="#240B3B"
                    tools:layout_marginTop="5dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15sp"
                    android:text="Descrição:"
                    android:textColor="#240B3B"
                    android:textSize="18sp" />


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/receita_descricaoreceita"
                        android:layout_width="350dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/oval"
                        android:textAlignment="center"
                        android:textColor="#240B3B"
                        tools:layout_marginTop="5dp" />
                </android.support.design.widget.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="50dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/receita_btnExcluirRec"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/ovalvermelho"
                        android:text="Excluir"
                        android:textColor="#FAFAFA" />

                    <Button
                        android:id="@+id/receita_btnalterar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/ovalverde"
                        android:text="Alterar"
                        android:textColor="#FAFAFA" />
                </LinearLayout>

            </LinearLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e6e6e6"

    tools:context=".AlterarNome">

    <FrameLayout

        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="16dp">

        <TextView
            android:id="@+id/textView26"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:layout_marginStart="95dp"
            android:layout_marginTop="40dp"
            android:text="Alterar nome"
            android:textColor="#240B3B"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imgAltNome"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginStart="260dp"
            android:layout_marginTop="30dp"
            app:srcCompat="@mipmap/ic_launcher_settings" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="140dp"
            android:text="Nome atual:"
            android:textColor="#240B3B"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edNomeAtual"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="170dp"
            android:background="@drawable/oval"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="#240B3B" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="250dp"
            android:text="Novo nome:"
            android:textColor="#240B3B"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edNovoNome"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="280dp"
            android:background="@drawable/oval"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="#240B3B" />

        <Button
            android:id="@+id/btnCancelarAlterarNome"
            android:layout_width="100dp"
            android:layout_height="44dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="410dp"
            android:layout_weight="1"
            android:background="@drawable/ovalvermelho"
            android:text="Cancelar"
            android:textColor="#FFFF" />

        <Button
            android:id="@+id/btnAlterarNome"
            android:layout_weight="1"
            android:background="@drawable/ovalverde"
            android:text="Atualizar"
            android:layout_width="100dp"
            android:layout_height="44dp"
            android:layout_marginStart="210dp"
            android:layout_marginTop="410dp"
            android:textColor="#FFFF" />

    </FrameLayout>

</RelativeLayout>